<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="142dp"
    android:layout_height="164dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/bg_item_plant_square">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icSubPlant"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/green_onion" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/icSubPlant"
        app:layout_constraintStart_toStartOf="@+id/icSubPlant"
        app:layout_constraintTop_toBottomOf="@+id/icSubPlant"
        tools:text="Bunga\nLavender" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7.5dp"
        android:background="@drawable/bg_check"
        android:padding="6dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>