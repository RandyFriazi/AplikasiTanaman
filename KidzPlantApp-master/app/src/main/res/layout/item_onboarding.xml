<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="4dp">

    <TextView
        android:id="@+id/tvOnboard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Pilih tanaman yang\nkamu ingin pelajari"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/ivOnboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOnboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/tvOnboard2"
        app:layout_constraintEnd_toEndOf="@+id/tvOnboard1"
        app:layout_constraintStart_toStartOf="@+id/tvOnboard1"
        app:layout_constraintTop_toBottomOf="@+id/tvOnboard1"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/ic_kidzplant" />

    <TextView
        android:id="@+id/tvOnboard2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvOnboard1"
        app:layout_constraintTop_toBottomOf="@+id/ivOnboard"
        tools:text="Aplikasi pembelajaran anak-anak\nmengenai tanaman hias, tanaman obat dan tanaman umbi-umbian" />

</androidx.constraintlayout.widget.ConstraintLayout>